{
    "extends": ["stylelint-config-standard", "stylelint-config-standard-scss"],
    "rules": {
        "property-no-unknown": [
            true,
            {
                "ignoreProperties": ["composes"]
            }
        ],
        "selector-pseudo-class-no-unknown": [
            true,
            {
                "ignorePseudoClasses": ["global", "local"]
            }
        ],
        "selector-class-pattern": "^[a-z][a-zA-Z0-9]*(-[a-zA-Z0-9]+)*$|^[a-z][a-zA-Z0-9]*$",
        "keyframes-name-pattern": "^[a-z][a-zA-Z0-9]*(-[a-zA-Z0-9]+)*$|^[a-z][a-zA-Z0-9]*$",
        "at-rule-no-unknown": [
            true,
            {
                "ignoreAtRules": ["mixin", "if", "else", "else if", "forward", "include", "use"]
            }
        ]
    }
}
