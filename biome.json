{
    "$schema": "https://biomejs.dev/schemas/1.8.2/schema.json",

    "organizeImports": {
        "enabled": true
    },

    "linter": {
        "enabled": true,
        "rules": {
            "recommended": true,
            "suspicious": {
                "noAssignInExpressions": "off"
            }
        }
    },

    "formatter": {
        "enabled": true,
        "indentStyle": "space",
        "indentWidth": 4,
        "lineWidth": 100,
        "lineEnding": "lf"
    },

    "files": {
        "ignore": [
            "**/.git",
            "**/.next",
            "**/.vercel",
            "**/node_modules",
            "**/dist/",
            "**/build/",
            "**/out/",
            "**/*.md",
            "**/*.mdx"
        ]
    }
}
